<?xml version="1.0" encoding="UTF-8"?>
<mapping>
        <class name="org.krams.tutorial.oxm.TaskRequest">
           <map-to xml="taskRequest" ns-uri="http://krams915.blogspot.com/ws/schema/oss"/>
           
           <field name="id" type="string">
              <bind-xml name="id" node="element"/>
           </field>

            <field name="taskText" type="string">
                <bind-xml name="taskText" node="element"/>
            </field>

           <field name="reportType" type="string">
              <bind-xml name="reportType" node="element"/>
           </field>
        </class>
        
        <class name="org.krams.tutorial.oxm.TaskResponse">
           <map-to xml="taskResponse" ns-uri="http://krams915.blogspot.com/ws/schema/oss"/>
           
           <field name="description" type="string">
              <bind-xml name="description" node="element"/>
           </field>
        </class>
</mapping>